{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "app/*": ["app/*"],
      "app/(tabs)/*": ["app/(tabs)/*"],
      "components/*": ["components/*"],
      "context/*": ["context/*"],
      "lib/*": ["lib/*"],
      "theme/*": ["theme/*"]
    }
  },
  "include": [
    "app",
    "app/(tabs)",
    "components",
    "context",
    "lib",
    "theme",
    "App.tsx",
    "__tests__",
    "jest.setup.ts",
    "jest.config.js",
    "types",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
